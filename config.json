{
  "PREPROCESSING": {
    "paths": {
      "rawTextData": "data/X_train_update.csv",
      "rawImageFolder": "data/images/images/image_train",
      "rawLabels": "data/Y_train_CVw08PX.csv",
      "cleanTextTrainData": "data/processed/text_train_processed.csv",
      "cleanTextTestData": "data/processed/text_test_processed.csv",
      "cleanImageTrainFolder": "data/images/images/cleaned_image_train",
      "cleanImageTestFolder": "data/images/images/image_test",
      "cleanTrainLabels": "data/processed/train_labels.csv",
      "cleanTestLabels": "data/processed/test_labels.csv"
    },
    "pipeline": {
      "toPipe": "all",
      "sampleSize": 0,
      "trainSize": 0.8,
      "randomState": 42,
      "textpipeline": {
        "constants": {
          "textualColumns": ["designation", "description"],
          "alphanumCharacters": "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789",
          "ponctuationCharacters": ".,!?;:-()[]{}\"'",
          "accentCharacters": "àáâäèéêëìíîïòóôöùúûüÀÁÂÄÈÉÊËÌÍÎÏÒÓÔÖÙÚÛÜçÇ",
          "maxTokenVectorizer": 512,
          "embeddingDimension": 384
        },
        "steps": [
          {
            "stepName": "character_cleaning",
            "transformer": "CharacterCleaner",
            "params": {}
          },
          {
            "stepName": "vectorization",
            "transformer": "Vectorizer",
            "params": {
              "model": "sentence-transformers/all-MiniLM-L6-v2"
            }
          },
          {
            "stepName": "imputation",
            "transformer": "CosineImputer",
            "params": {
              "n_neighbors": 5,
              "excluded_cols": []
            }
          },
          {
            "stepName": "scaling",
            "transformer": "EmbeddingScaler",
            "params": {
              "scaling": "StandardScaler",
              "excluded_cols": []
            }
          }
        ]
      },
      "imagepipeline": {
        "constants": {
          "imageShape": [224, 224, 3],
          "enableCuda": false,
          "numThreads": 4
        },
        "steps": [
          {
            "stepName": "rotation",
            "transformer": "RandomImageRotation",
            "params": {
              "degree": 10.0,
              "p": 0.3
            }
          },
          {
            "stepName": "horizontal_flip",
            "transformer": "RandomImageHFlip",
            "params": {
              "p": 0.5
            }
          },
          {
            "stepName": "crop",
            "transformer": "RandomImageCrop",
            "params": {
              "min_scale": 0.8,
              "p": 0.3
            }
          },
          {
            "stepName": "blur",
            "transformer": "RandomImageBlur",
            "params": {
              "max_kernel": 3,
              "p": 0.2
            }
          }
        ]
      }
    }
  },
  "LOGS": {
    "filePath": "logs/{DATE}_preprocessing.log",
    "baseFormat": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "dateFormat": "%Y-%m-%d %H:%M:%S"
  },
  "DECISION_TREE": {
    "model_params": {
      "criterion": "gini",
      "max_depth": 10,
      "min_samples_split": 2,
      "min_samples_leaf": 1,
      "random_state": 42
    },
    "feature_engineering": {
      "text_features": {
        "use_tfidf": true,
        "max_features": 1000,
        "ngram_range": [1, 2]
      },
      "image_features": {
        "use_basic_stats": true,
        "use_histogram": true,
        "histogram_bins": 32
      }
    },
    "output_paths": {
      "model_path": "models/decision_tree_model.pkl",
      "features_path": "data/processed/features_for_dt.csv",
      "evaluation_path": "reports/decision_tree_evaluation.json"
    }
  }
}
